<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.views">
      <category
            name="Arc4Eclipse"
            id="org.arc4eclipse">
      </category>
      <view
            name="Arc - Jar"
            icon="icons/Jar.gif"
            category="org.arc4eclipse"
            class="org.arc4eclipse.selectedArtifactPlugin.views.SelectedJarView"
            id="org.arc4eclipse.selectedArtifactPlugin.selectedJarView">
      </view>
      <view
            name="Arc - Org"
            icon="icons/Project.gif"
            category="org.arc4eclipse"
            class="org.arc4eclipse.selectedArtifactPlugin.views.SelectedOrganisationView"
            id="org.arc4eclipse.selectedArtifactPlugin.selectedOrganisationView">
      </view>
      <view
            name="Arc - Proj"
            icon="icons/Project.gif"
            category="org.arc4eclipse"
            class="org.arc4eclipse.selectedArtifactPlugin.views.SelectedProjectView"
            id="org.arc4eclipse.selectedArtifactPlugin.selectedProjectView">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="org.eclipse.jdt.ui.JavaPerspective">
         <view
               ratio="0.5"
               relative="org.eclipse.ui.views.TaskList"
               relationship="right"
               id="org.arc4eclipse.selectedArtifactPlugin.selectedJarView">
         </view>
         <view
               ratio="0.5"
               relative="org.eclipse.ui.views.TaskList"
               relationship="right"
               id="org.arc4eclipse.selectedArtifactPlugin.selectedOrganisationView">
         </view>
         <view
               ratio="0.5"
               relative="org.eclipse.ui.views.TaskList"
               relationship="right"
               id="org.arc4eclipse.selectedArtifactPlugin.selectedProjectView">
         </view>
      </perspectiveExtension>
   </extension>
  

</plugin>
